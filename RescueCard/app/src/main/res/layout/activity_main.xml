<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shreyaverma.rescuecard.MainActivity">
    <ImageView
        android:src="@drawable/pup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Best Things In Life Are Rescued ."
        android:textSize="21.9dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#000000"
        android:padding="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't Shop ,Adopt ."
        android:textSize="26.7dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#000000"
        android:padding="55dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
